<idea-plugin>
    <id>com.gifgroen.gradleDependencyVersionUpdater</id>
    <name>Gradle Dependency Version Updater</name>
    <vendor email="support@gifgroen.com" url="http://gifgroen.com">Gifgroen</vendor>

    <description><![CDATA[
    Gradle Dependency Version Updater with new version highlighting and update functionality for buildSrc variables.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="MyGroup" displayType="BALLOON" key="com.gifgroen.actions.MyAction"/>

        <!-- Version state -->
        <applicationService serviceImplementation="com.gifgroen.state.VersionState"/>

        <postStartupActivity implementation="com.gifgroen.components.VersionStartupActivity" />

        <!-- App settings -->
        <applicationService serviceImplementation="com.gifgroen.state.AppSettingsState"/>

        <applicationConfigurable parentId="tools"
                                 instance="com.gifgroen.configurables.ApplicationSettingsConfigurable"
                                 id="com.gifgroen.configurables.ApplicationSettingsConfigurable"
                                 displayName="My Application Settings"/>

    </extensions>

    <actions>
        <group id="MyPlugin.TopMenu" text="_MyPlugin" description="MyPlugin toolbar menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="com.gifgroen.actions.MyAction"
                    class="com.gifgroen.actions.MyAction"
                    text="A Wild MyAction"
                    description="Execution of a wild MyAction action"/>
        </group>
    </actions>
</idea-plugin>